<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<include
		layout="@layout/toolbar"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@android:color/white"
			android:layout_margin="4dp">
			<ImageView
				android:id="@+id/eventDetailImage"
				android:layout_width="370dp"
				android:layout_height="370dp"
				android:layout_margin="16dp"
				android:textAlignment="center"
				android:contentDescription="@string/app_name"
				android:src="@drawable/ic_empty_image"
				android:layout_gravity="center"/>
			<TextView
				android:id="@+id/titleEventDetailText"
				android:textColor="@android:color/black"
				android:textFontWeight="900"
				android:textSize="16sp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				tools:text="VIVALDI: Cuatro Estaciones | Orquesta Solistas de América"/>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView
						android:id="@+id/dayDetailText"
						android:textColor="@color/colorSecondaryFont"
						android:textFontWeight="900"
						android:textSize="24dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_margin="16dp"
						android:layout_gravity="center"
						tools:text="21"/>
					<TextView
						android:id="@+id/monthDetailText"
						android:textFontWeight="900"
						android:textSize="24dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="16dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="16dp"
						android:layout_gravity="center"
						tools:text="SEP"/>
				</LinearLayout>
				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="16dp">

						<TextView
							android:id="@+id/startTimeDetailText"
							android:textFontWeight="900"
							android:textSize="14sp"
							android:layout_width="35.4dp"
							android:layout_height="wrap_content"
							android:maxLines="1"
							android:ellipsize="end"
							tools:text="18:00"/>
						<TextView
							android:textFontWeight="900"
							android:textSize="14sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:maxLines="1"
							android:ellipsize="end"
							android:text=" - "/>

						<TextView
							android:id="@+id/endTimeDetailText"
							android:textFontWeight="900"
							android:textSize="14sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							tools:text="00:00"/>

					</LinearLayout>

					<TextView
						android:id="@+id/addressEventDetailText"
						android:textFontWeight="900"
						android:textSize="14sp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="16dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="16dp"
						tools:text="Teatro José Pablo Moncayo - PALCCO Teatro José Pablo Moncayo - PALCCO Teatro José Pablo Moncayo - PALCCO"/>



				</LinearLayout>
			</LinearLayout>
			<TextView
				android:id="@+id/priceEventDetailText"
				android:textFontWeight="900"
				android:textStyle="bold"
				android:textColor="@color/colorPriceFont"
				android:textSize="18dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				tools:text="$200.00 MXN"/>

			<Button
				android:id="@+id/paymentDetailButton"
				android:textFontWeight="900"
				android:textStyle="bold"
				android:textColor="@android:color/white"
				android:background="@color/colorAccent"
				android:textSize="18dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:text="@string/payment"/>
			<Button
				android:id="@+id/deleteEventButton"
				android:textFontWeight="900"
				android:textStyle="bold"
				android:textColor="@color/colorAccent"
				android:background="@color/colorPrimaryDark"
				android:textSize="18dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:text="@string/delete_event"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

